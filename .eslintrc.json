{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2016,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single",
            { "allowTemplateLiterals": true }
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-mixed-spaces-and-tabs": [
            "error"
        ],
        "no-unreachable": [
            "error"
        ],
        "no-console": [
            "off"
        ]
    },
    "globals": {
        "global": "writeable",
        "swift": "writeable",
        "mp": "writeable",
        "document": "writeable",
        "$": "writeable"
    }
}